# ================================================================================================
# üìä COVERAGE CONFIGURATION
# ================================================================================================

# Coverage Provider Selection (internal or codecov)
GO_COVERAGE_PROVIDER=codecov

# Codecov Configuration (only used when provider=codecov)
CODECOV_TOKEN_REQUIRED=true

# Coverage Exclusions (aligned with codecov.yml ignore paths)
GO_COVERAGE_EXCLUDE_PATHS=test/,vendor/,testdata/,.github/,.mage-cache/,.vscode/,bin/,example/,examples/,mocks/,testing/

# ================================================================================================
# üóÑÔ∏è REDIS SERVICE CONFIGURATION
# ================================================================================================

# Enable Redis service container for tests/benchmarks
ENABLE_REDIS_SERVICE=true

# Redis service mode (auto, always, never)
REDIS_SERVICE_MODE=always
